# LLM Provider (default for single mode)
LLM_PROVIDER=groq

# Groq (fast inference + Whisper transcription)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# Google Gemini (complex reasoning, web search, vision)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Cerebras (ultra-fast fallback)
CEREBRAS_API_KEY=
CEREBRAS_MODEL=qwen-3-235b

# Anthropic (optional)
ANTHROPIC_API_KEY=

# Telegram
TELEGRAM_BOT_TOKEN=

# Server
PORT=3000
NODE_ENV=development

# Orchestrator: smart (auto-route) | single (use LLM_PROVIDER only)
ORCHESTRATOR_MODE=smart

# State
STATE_REPO_PATH=../
GIT_REPO_URL=
GIT_TOKEN=

# Database
DB_PATH=./data/marvin.db
